<script type="text/javascript">
$(document).ready((data) => {
  $.ajax({
    url: 'http://api.forismatic.com/api/1.0/?method=getQuote&key=457653&format=jsonp&lang=en&jsonp=?',
    method: 'GET',
    dataType: 'JSON',
    success: (data) => {
      console.log(data);
      let $div = $('<div>');
      let $h4One = $('<h4>');
      let $h3One= $('<h3>');
        let quote = data.quoteText;
        let author = data.quoteAuthor;
        $h3One.text(quote)
        $h4One.text(author)
        $div.append($h3One);
        $div.append($h4One);
        $('body').append($div);
    }
  })
})
